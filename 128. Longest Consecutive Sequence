class Solution {
    public int longestConsecutive(int[] nums) {
        if(nums.length == 0) return 0 ;
        int mx = 1;
        Set<Integer> s = new HashSet<>();
        for (int i = 0; i < nums.length; i++) {
            s.add(nums[i]);
        }

        for (int num : s) {
            if (!s.contains(num - 1)) {
                int cur = num;
                int cnt = 1;
                while (s.contains(cur + 1)) {
                    cnt++;
                    cur++;
                }
                mx = Math.max(mx, cnt);
            }
        }

        return mx;
    }
}
